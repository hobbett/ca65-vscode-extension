{
    "name": "ca65-vscode-extension",
    "description": "CA65 Assembly language support for VS Code",
    "author": "Quang Luong",
    "license": "MIT",
    "version": "1.4.4",
    "publisher": "hobbett",
    "repository": {
        "type": "git",
        "url": "https://github.com/hobbett/ca65-vscode-extension.git"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "main": "./client/out/extension.js",
    "activationEvents": [
        "onLanguage:ca65"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ca65",
                "aliases": [
                    "ca65 Assembly",
                    "ca65"
                ],
                "extensions": [
                    ".s",
                    ".asm",
                    ".inc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ca65",
                "scopeName": "source.ca65",
                "path": "./syntaxes/ca65.tmLanguage.json"
            }
        ],
        "configurationDefaults": {
            "[ca65]": {
                "editor.stickyScroll.defaultModel": "foldingProviderModel"
            }
        },
        "configuration": {
            "title": "ca65 Language Support",
            "properties": {
                "ca65.enableCa65StdErrDiagnostics": {
                    "type": "boolean",
                    "description": "Enables diagnostics powered by ca65 stderr.",
                    "default": "true"
                },
                "ca65.executablePath": {
                    "type": "string",
                    "description": "The full path to the ca65 compiler executable. If this is not provided, the ca65 in the system PATH will be used"
                },
                "ca65.enableUnusedSymbolDiagnostics": {
                    "type": "boolean",
                    "description": "Enables unused symbol diagnostics.",
                    "default": "true"
                },
                "ca65.includeDirs": {
                    "type": "array",
                    "description": "A list of workspace-relative wildcard-compatible paths to search for `.include` statements after the current file's directory. This should match any '-I' options of your ca65 build step.",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "**/include"
                    ]
                },
                "ca65.binIncludeDirs": {
                    "type": "array",
                    "description": "A list of workspace-relative paths to search for `.incbin` statements after the current file's directory. This should match any '--bin-include-dir' options of your ca65 build step.",
                    "items": {
                        "type": "string"
                    }
                },
                "ca65.autoIncludeExtensions": {
                    "type": "array",
                    "description": "A list of extensions for which we will provide auto-include candidates for.",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        ".inc"
                    ]
                },
                "ca65.anonymousLabelIndexHints": {
                    "type": "boolean",
                    "description": "Enables inlay hints for anonymous label indexes.",
                    "default": "true"
                },
                "ca65.importFromHints": {
                    "type": "boolean",
                    "description": "Enables inlay hints for display the origin file of an import.",
                    "default": "true"
                }
            }
        },
        "commands": [
            {
                "command": "ca65.showReference",
                "title": "ca65: Show Instruction Reference"
            },
            {
                "command": "ca65.dumpPerformanceStats",
                "title": "ca65: Dump Performance Stats to Output"
            }
        ],
        "snippets": [
            {
                "language": "ca65",
                "path": "./snippets/ca65.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b tsconfig.json",
        "watch": "tsc -b tsconfig.json -w"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/node": "^24.3.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1",
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-protocol": "^3.17.5",
        "vscode-languageserver-textdocument": "^1.0.1",
        "vscode-languageserver-types": "^3.17.5",
        "vscode-uri": "^3.1.0",
        "which": "^5.0.0"
    }
}
